alias "..=cd .."
alias "lsa=ls -la"
alias "reload=source ~/.bashrc"

alias "vim=nvim"
alias "vimrc=vim ~/.vimrc"

# Change cursor to vertical bar in insert mode
export NVIM_TUI_ENABLE_CURSOR_SHAPE=1

# Tutorial aliases
alias 00="ln -sf .vimrc-00-blank .vimrc"
alias 05="ln -sf .vimrc-05-plugin-manager .vimrc"
